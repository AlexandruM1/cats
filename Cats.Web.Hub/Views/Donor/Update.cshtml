@using Cats.Web.Hub.Helpers
@model IEnumerable<Cats.Models.Hub.Donor>
<table width="60%">
    <tr>
        <th style="width: 20px"></th>
        <th>
            Name
        </th>
        <th>
            Responsible Donor
        </th>
        <th>
            Source Donor
        </th>
        <th></th>
    </tr>
     @{
         var i = 1;
    }
    @foreach (var item in Model) {
        <tr>
            <td>@i</td>
            <td style="width: 250px">
                @Html.DialogFormLink(@item.Name, Url.Action("Edit/" + item.DonorID),"Edit Donor","list",Url.Action("Update") ) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsResponsibleDonor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSourceDonor)
            </td>
            <td>
          
                @Html.ActionLink("Delete", "Delete", new { id = item.DonorID })
            </td>
        </tr>
        i++;
    }

</table>