@model Cats.Models.RequisitionViewModel

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("SelectHub", "HubAllocation", FormMethod.Post, Model))
{
<fieldset>
    <legend>Approved Requisitions</legend>
</fieldset>

<table  class="table table-striped table-bordered">
    <tr>
        <td>
            @Html.Label("select request")
        </td>
        <td>
            @Html.Label("commodity")
        </td>
        <td>
            @Html.Label("Requisition No")
        </td>
        <td>
            @Html.Label("Requisition Date")
        </td>
        <td>
            @Html.Label("Aproved Date")
        </td>
        <td>
            @Html.Label("Amount")
        </td>
         <td>
            @Html.Label("Beneficaiaries")
        </td>
    </tr>

    @{int index = 0;}
@foreach (var item in Model._reliefRequisition)
{

    <tr>
        <td>
            @Html.CheckBox("requests")
            
        </td>
        <td>
            @item.Commodity
             @Html.HiddenFor(i=>i._reliefRequisition[index].Commodity)
        </td>
        <td>
            @item.RequisitionNo
            @Html.HiddenFor(i=>i._reliefRequisition[index].RequisitionNo)
        </td>
        <td>
            @item.RequestedDate
            @Html.HiddenFor(i=>i._reliefRequisition[index].RequestedDate)
        </td>
        <td>
            @item.ApprovedDate
            @Html.HiddenFor(i=>i._reliefRequisition[index].ApprovedDate)
        </td>
   
        <td>
          @ViewBag.Detail[index].Amount
             @Html.Hidden("Sku", @ViewBag.SkuCategory);
        </td>
         <td>
            @ViewBag.Detail[index].Beneficiaries
            
        </td>
    
        </tr>
    index++;
        }
        
    </table>
    <input class="button" id="submit" type="submit" value="Submit" />
    <button type="submit" class="btn btn-success">
  <i class="icon-user icon-white"></i> submit
</button>
        }
<p>
    @Html.ActionLink("Edit", "SelectHub", new { /* id=Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
