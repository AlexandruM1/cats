@model IEnumerable<Cats.Models.ReliefRequisitionDetail>

@{
    ViewBag.Title = "hubAllocation";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
 


<div class="container">
        <fieldset>
	        <legend>Hub Allocation</legend>
        </fieldset>
	    <div class="well">
	      <form id="hubAllocate" class="form-horizontal" method="post" action="SelectHub">
        
	        
            <div class="control-group">
	            <label class="control-label">Date</label>
	            <div class="controls">
	                <div class="input-prepend">
	               <span class="add-on"><i class="icon-th"></i></span>
	                    <input type="text" class="small" id="datepicker"  >
	                </div>
	            </div>
	        </div>
	        <div class="control-group ">
	            <label class="control-label">Allocation reference No</label>
	            <div class="controls">
                <div class="input-prepend">
	                 <span class="add-on"><i class="icon-th"></i></span>
	                    <input type="text" class="small" id="rNumber" name="rNumber" placeholder="Reference Number">
	                </div>
	            </div>
	        </div>
	        <div class="control-group">
	            <label class="control-label">Hubs</label>
	            <div class="controls">
	                <div class="input-prepend">
                     @Html.DropDownList("Country", ViewData["Hubs"] as SelectList)
	               <select class="selectpicker">

	               </select>
                   
               </div>
            </div>
        </div>
    </form>
    </div>
 </div>
@using (Html.BeginForm("hubAllocation", "HubAllocation", FormMethod.Post, Model))
{
<fieldset>
    <legend>Approved Requisitions</legend>
</fieldset>
<div class="container">
    <table  class="table table-striped table-bordered">
    <tr>
       
        <td>
            @Html.Label("commodity")
        </td>
        <td>
            @Html.Label("Requisition No")
        </td>
        <td>
            @Html.Label("Requisition Date")
        </td>
        <td>
            @Html.Label("Aproved Date")
        </td>
        <td>
            @Html.Label("Amount")
        </td>
         <td>
            @Html.Label("Beneficaiaries")
        </td>
    </tr>
        

       
  @{int index = 0;}
@foreach (var item in Model)
{

    <tr>
        <td>
            @Html.CheckBox("requests")
        </td>
       <td>
            @item.Commodity
            @Html.HiddenFor(modelitem=>item.Commodity)
        <td>
            @item.ReliefRequisition.RequisitionNo
             @Html.HiddenFor(modelitem=>item.ReliefRequisition.RequisitionNo)
        </td>
        <td>
            @item.ReliefRequisition.RequestedDate
           @Html.HiddenFor(modelitem=>item.ReliefRequisition.RequestedDate)
        </td>
        <td>
            @item.ReliefRequisition.ApprovedDate
            @Html.HiddenFor(modelitem=>item.ReliefRequisition.ApprovedDate)
        </td>
   
        <td>
          @item.Amount
              @Html.HiddenFor(modelitem=>item.Amount)
        </td>
         <td>
            @item.BenficiaryNo
            @Html.HiddenFor(modelitem=>item.Amount)
        </td>
    
        </tr>
            index++;
        }
        
    </table>
     </div>
    <input class="button" id="submit" type="submit" value="Submit" />
    <button type="submit" class="btn btn-success">
  <i class="icon-user icon-white"></i> submit
</button>
        }
<p>
