@model Cats.Areas.Settings.Models.UserPreferenceViewModel
@using Cats.Areas.Settings.Models;

@using (Html.BeginForm("Edit", "UserPreference", FormMethod.Post, new { @class = "form-horizontal" }))
          {              
              <!-- Start -->
              
              <div class="control-group">
        <label class="control-label">Language:</label>
        <div class="controls">
           
           @(Html.Kendo().DropDownList()
          .Name("Language")
          .DataValueField("Language")
          .DataTextField("Language")
          .BindTo(Model.Language)
          .SelectedIndex(Model.Language.IndexOf(new LanguageCode { Language = Model.CurrentPreference.Language })))
        </div>
    </div>


    <div class="control-group">
        <label class="control-label">Keyboard:</label>
        <div class="controls">
           @(Html.Kendo().DropDownList()
              .Name("KeyboardLanguage")
              .DataValueField("KeyboardLanguage")
              .DataTextField("KeyboardLanguage")
              .BindTo(Model.KeyboardLanguage)
              .SelectedIndex(Model.KeyboardLanguage.IndexOf(new Keyboard { KeyboardLanguage = Model.CurrentPreference.KeyboardLanguage })))
        </div>
    </div>
    

    <div class="control-group">
        <label class="control-label">Prefered Weight Measurement Unit:</label>
        <div class="controls">
           @(Html.Kendo().DropDownList()
              .Name("PreferedWeightMeasurement")
              .DataValueField("PreferedWeightMeasurement")
              .DataTextField("PreferedWeightMeasurement")
              .BindTo(Model.PreferedWeightMeasurement)
              .SelectedIndex(Model.PreferedWeightMeasurement.IndexOf(new PreferedWeightMeasurementUnit { PreferedWeightMeasurement = Model.CurrentPreference.PreferedWeightMeasurement })))

        </div>
    </div>


    <div class="control-group">
        <label class="control-label">Date Preference:</label>
        <div class="controls">
            @(Html.Kendo().DropDownList()
          .Name("DatePreference")
          .DataValueField("DatePreference")
          .DataTextField("DatePreference")
          .BindTo(Model.DatePreference)
          .SelectedIndex(Model.DatePreference.IndexOf(new Cats.Areas.Settings.Models.Calendar { DatePreference = Model.CurrentPreference.DatePreference })))
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Default Theme:</label>
        <div class="controls">
            @(Html.Kendo().DropDownList()
              .Name("DefaultTheme")
              .DataValueField("DefaultTheme")
              .DataTextField("DefaultTheme")
              .BindTo(Model.DefaultTheme)
              .SelectedIndex(Model.DefaultTheme.IndexOf(new Theme { DefaultTheme = Model.CurrentPreference.DefaultTheme })))
        </div>
    </div>
                           
              <!-- End -->
               <div class="control-group">
        <label class="control-label"></label>
        <div class="controls">
            <input type="submit" name="EditPreference" class="btn btn-primary" value="Edit Preference" />
            <a href="JavaScript:" class="btn" id="cancel">Cancel</a>
        </div>
    </div>            
          }

<script type="text/javascript">

    $('#cancel').click(function () {
        location.reload();
    });

</script>


