@using Kendo.Mvc.UI
@model List<Cats.Models.HRD>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";  
}
@section LeftBar{

    @Html.Partial("_HRDLeftBar");
}
<div class="well">
    <h2 class="page-header">List Of HRDs</h2>
   
</div>
@(Html.Kendo().Grid<Cats.Models.HRD>()
    .Name("grid")
    .Columns(columns =>
        {
            columns.Bound(p => p.HRDID).Template(

                @<text>
<a href="@Url.Action("Edit", "HRD", new { Area = "EarlyWarning", id = item.HRDID })">@Html.DisplayFor(modelItem => item.HRDID)</a>
</text>); 
        
        columns.Bound(p => p.Month);
        columns.Bound(p => p.Year);
        columns.Bound(p => p.CreatedDate).Format("{0:MM/dd/yyyy}");
        columns.Bound(p => p.PublishedDate).Format("{0:MM/dd/yyyy}");

            columns.Command(p =>
                {
                    p.Custom("ViewDetails").Click("showDetails");
                    p.Custom("Edit").Click("hrdEdit");
                });
            //columns.Command(p =>
            //{
            //    p.Custom("Edit").Click("hrdEdit");
            //    p.Custom("ViewDetails").Click("showDetails");
            //});

        })
    .Pageable()
    .Sortable()
    .Filterable()
    .DataSource(dataSource => dataSource
          .Ajax()
          .PageSize(8)
            .Model(model => model.Id(p => p.HRDID))
            .Read(read => read.Action("HRD_Read", "HRD"))
 
     )
   
      )



<script>
    function showDetails(e) {
        e.preventDefault();
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location = "HRD/HRDDetail/" + dataItem.HRDID;

    }
    
</script>
<script>
    function hrdEdit(e) {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location = "HRD/Edit/" + dataItem.HRDID;
    }
</script>

<script type="text/javascript">
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
</script>