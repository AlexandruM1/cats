@using Cats.Models.ViewModels
@using Kendo.Mvc.UI
@model  List<Cats.Models.Contribution>


@{
    ViewBag.Title = "ContributionSummary";
    Layout = "~/Views/Shared/_MainLayout.cshtml";  
}
@section Toolbar
{
        <a data-buttontype="btn_new_record"  class="btn toolbar-btn " href="@Url.Action("Create", "Contribution")"></a>
}

@section LeftBar{

    @Html.Partial("_ContributionLeftBar");
}
<h4>Select year to view summary</h4>
<div class="form-horizontal">
    <table>
        <tr>
            <td>
                Select Year to View Contribution Summary    
            </td>
            <td> < Year:
                @Html.DropDownList("Year", string.Empty)
            </td>
        </tr>
    </table>

</div>
@(Html.Kendo().Grid<Cats.Areas.EarlyWarning.Models.ContributionSummaryViewModel>()
          
    .Name("grid")
    .Columns(columns =>
        {
        columns.Bound(p => p.Donor);
            columns.Bound(p => p.Commodity);
            columns.Bound(p => p.Ammount);
       
        })
    .DataSource(datasource => datasource.Ajax().Read(read => read.Action("ContributionSummary_Read", "Contribution").Data("filterData")))
