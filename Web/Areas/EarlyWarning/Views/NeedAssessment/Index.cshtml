@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section Toolbar
{

    <a data-buttontype="btn_new_record"  class="btn toolbar-btn " href="@Url.Action("AddRegion", "NeedAssessment")"></a>
}

<fieldset>
    <legend>
        Beneficiary numbers and duration of assisstance
    </legend>
</fieldset>

@{var record = 0;}



@(Html.Kendo().Grid<Cats.Models.NeedAssessmentHeaderViewModel>()
    .Name("grid")
    .Columns(columns =>

    {
        columns.Bound(p => p.RegionName);
        columns.Bound(p => p.SeasonName).Visible(true).Width(100);
        columns.Bound(p => p.NeedADate).Format("{0:dd/mm/yyyy}");
        columns.Bound(p => p.NeedACreaterName).Width(100);
        columns.Command(p =>
        {
            p.Custom("Edit").Click("NeedAssessmentEdit");
            p.Custom("Approve").Click("approveNeedAssessment");
          

        });
    })
    .ToolBar(toolbar =>
    {
        toolbar.Template(@<text>
           <div class="toolbar">
                    <label class="category-label" for="category">Show Zones by Region:</label>
                        @(Html.Kendo().DropDownList()
                            .Name("regions")
                            .OptionLabel("All")
                            .DataTextField("Name")
                            .DataValueField("AdminUnitID")
                            .AutoBind(false)
                            .Events(e => e.Change("regionsChange"))
                            .DataSource(ds =>
                            {
                                ds.Read("GetRegions", "NeedAssessment");
                            })
                        ) 
                        </div>
        </text>);

      
    
    })
    .HtmlAttributes(new { style = "height: 430px" })
    .Pageable()
    .Sortable()
    .Scrollable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
        .Model(model => model.Id(p => p.NeedAID))
        .Read("NeedAssessmentRead", "NeedAssessment")
    )
)

<script>
    function regionsChange() {
        var value = this.value(),
		 	 grid = $("#grid").data("kendoGrid");

        if (value) {
           
            grid.dataSource.filter({ field: "Region", operator: "eq", value: parseInt(value) });
        } else {
            grid.dataSource.filter({});
        }
    }
</script>

<style scoped="scoped">
    #grid .k-toolbar
    {
        min-height: 27px;
        padding: 1.3em;
    }
    .category-label
    {
        vertical-align: middle;
        padding-right: .5em;
    }
    #category
    {
        vertical-align: middle;
    }
    .toolbar {
        float: right;
    }
</style>

<script>
    function NeedAssessmentEdit(e) {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        window.location = "NeedAssessment/EditNeedAssessment/" + dataItem.Region;
    }
</script>
<script>

    function approveNeedAssessment(e) {
        e.preventDefault();
       
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        wnd.center().open();
        $("#yes").click(function () {
            window.location = "NeedAssessment/ApproveNeedAssessment/" + dataItem.NeedAID;
            wnd.close();
        });

        $("#no").click(function () {
            wnd.close();
        });
    }
</script>
<div id="modalWindow">
    <h6>Approve Need Assessment?</h6>
    <button id="yes" class="k-button">Yes</button>
    <button id="no" class="k-button">No</button>
</div>
<script>
    var wnd;
    $(document).ready(function () {
        wnd = $("#modalWindow").kendoWindow({
            title: "Approve confirmation",
            modal: true,
            visible: false,
            resizable: false,
            width: 300
        }).data("kendoWindow");
    });
</script>