@model  IEnumerable<Cats.Models.ReliefRequisition>

@{
    ViewBag.Title = "Regional Relief Requests";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="well">
    <h4 class="page-header">List Of Regional Requests</h4>
</div>
@section LeftBar
{
    <div class="control-group">
        <label class="control-label">Year</label>
        <div class="controls">
            <input type="date" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Month</label>
        <div class="controls">
            <select>
                <option>Select Month</option>
            </select>
        </div>
    </div>

    <div class="control-group">
        <div class="controls">            
            <a class="btn btn-success" href="#">Filter</a>
        </div>
    </div>

}
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdminUnit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Program.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Round)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdminUnit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZoneID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*<a href="@Url.Action("Edit","ReliefRequisition",new {Area="EarlyWarning",id=item.ReliefRequisitionID})">@Html.DisplayFor(modelItem => item.RegionID)</a>*@                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequisitionNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Round)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminUnit.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZoneID)
            </td>
            <td>

                <div class="btn-group">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-cog"></i>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @*<li><a href="@Url.Action("Edit", "ReliefRequisition", new { Area = "EarlyWarning", id = item.ReliefRequisitionID })">Edit</a></li>*@
                        <li><a href="#">Approve</a></li>
                        <li><a href="#">View Status</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>

