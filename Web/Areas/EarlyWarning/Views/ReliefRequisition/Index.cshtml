@model  IEnumerable<Cats.Models.ReliefRequistion>

@{
    ViewBag.Title = "Regional Relief Requests";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Regional Monthly Relief Requests</h2>
@section LeftBar
{
    <div class="control-group">
        <label class="control-label">Year</label>
        <div class="controls">
            <input type="date" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Month</label>
        <div class="controls">
            <select>
                <option>Select Month</option>
            </select>
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <button class="ui-button-primary">Search</button>
        </div>
    </div>

}
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequistionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Program.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Round.RoundNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdminUnit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReferenceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequistionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Round.RoundNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminUnit.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ReliefRequistionId }) 
              
            </td>
        </tr>
    }

</table>

