<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">@Html.Translate("Send Requisition To Logistics")</h3>
</div>

<h5 class="offset1">@Html.Translate("Are you sure you want to send this Requisition to logistics?")</h5>




@using (Html.BeginForm("ConfirmSendToLogistics", "ReliefRequisition", FormMethod.Post, new { @class = "modal-form" }))
{@Html.HiddenFor(model => model.RequisitionID)
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="span6">
                <div class="control-group">
                    <div class="control-label span6">
                        @Html.DisplayNameFor(model => model.RequisitionNo)
                    </div>
                    <div class="controls span6">
                        @Html.TextBoxFor(model => model.RequisitionNo, null, new { disabled = "true",@class="span10"})
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label span6">
                        @Html.DisplayNameFor(model => model.Region)
                    </div>
                    <div class="controls span6">
                        @Html.TextBoxFor(model => model.Region, null, new { disabled = "true",@class="span10" })
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label span6">
                        @Html.DisplayNameFor(model => model.Program)
                    </div>
                    <div class="controls span6">
                        @Html.TextBoxFor(model => model.Program, null, new { disabled = "true" ,@class="span10"})
                    </div>
                </div>
            </div>
            <div class="span6">
                @if (Model.ProgramID==1)
                {
                   <div class="control-group">
                    <div class="control-label span4">
                        @Html.DisplayNameFor(model => model.Round)
                    </div>
                    <div class="controls span6">
                        @Html.TextBoxFor(model => model.Round, null, new { disabled = "true" ,@class="span10"})
                    </div>
                </div>
                }
                else
                {
                  <div class="control-group">
                    <div class="control-label span4">
                        @Html.DisplayNameFor(model => model.Month)
                    </div>
                    <div class="controls span6">
                        @Html.TextBoxFor(model => model.Month, null, new { disabled = "true" ,@class="span10"})
                    </div>
                </div>
                } 
                <div class="control-group">
                    <div class="control-label span4">
                        @Html.LabelFor(model => model.RequestedDateEt,new {@class="cats-date-pref"})
                    </div>
                    <div class="controls span6">
                        @Html.TextBoxFor(model => model.RequestedDateEt, null, new { disabled = "true",@class="span10" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @if (Model.StatusID == (int)Cats.Models.Constant.ReliefRequisitionStatus.Draft)
        {
            <button class="btn btn-primary" type="submit">Yes</button>
        }
        <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>

    </div>

}
