@model IList<Cats.Models.ReliefRequisitionDetail>

@{
    ViewBag.Title = "ApprovedRequesitions";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>ApprovedRequesitions</h2>


@section LeftBar
{
    @using (Html.BeginForm())
    {
        <div class="control-group">
            <label class="control-label">Year</label>
            <div class="controls">
                @Html.TextBox("year")
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Month</label>
            <div class="controls">
                @Html.DropDownList("month",(SelectList)ViewBag.Months)
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input type="submit" value="Filter" class="btn btn-primary"/>
            </div>
        </div> 
    }
 }
@using (Html.BeginForm("hubAllocation","HubAllocation",FormMethod.Post,Model))
{
<table class="table table-striped table-bordered">
    <tr>
        <td>
            @Html.Label("Select Request")
        </td>
        <th>
            @Html.Label("Commodity")
        </th>
        <th>
            @Html.Label("Region")
        </th>
        <th>
            @Html.Label("Zone")
        </th>
        <th>
            @Html.Label("Round")
        </th>
        <th>
            @Html.Label("Req. No")
        </th>
       
        <th>
            @Html.Label("Req. Date")
        </th>
        <th>
            @Html.Label("Amount")
        </th>
        <th>
            @Html.Label("Beneficiaries")
        </th>
       
        
    </tr>
    @{int index = 0;}
    @for(int i = 0;i < 2;i++)

 {
     <tr>
        <td>
          <input type='checkbox' " + ((item.Result == true) ? "checked" : "") + " disabled='disabled' name="IsChecked"  value="@i"/>

        </td> 
        <td>
            @Html.DisplayFor(m=>m[i].Commodity.Name)
            @Html.HiddenFor(m=>m[i].Commodity.Name)
            
        </td>
        
         <td>
            @Html.DisplayFor(m=>m[i].ReliefRequisition.RegionID)
            @Html.HiddenFor(m=>m[i].ReliefRequisition.RegionID)
            
        </td>
        
           <td>
            @Html.DisplayFor(m=>m[i].ReliefRequisition.ZoneID)
            @Html.HiddenFor(m=>m[i].ReliefRequisition.ZoneID)
            
        </td>
        
        
            <td>
            @Html.DisplayFor(m=>m[i].ReliefRequisition.Round)
            @Html.HiddenFor(m=>m[i].ReliefRequisition.Round)
            
        </td>
        
        <td>
           
            @Html.DisplayFor(m=>m[i].ReliefRequisition.RequisitionNo)
            @Html.HiddenFor(m=>m[i].ReliefRequisition.RequisitionNo)
            
        </td>
        
        
            <td>
            @Html.DisplayFor(m=>m[i].ReliefRequisition.RequestedDate)
            @Html.HiddenFor(m=>m[i].ReliefRequisition.RequestedDate)
            
        </td>
         <td>
            @Html.DisplayFor(m=>m[i].Amount)
            @Html.HiddenFor(m=>m[i].Amount)
            
        </td>
          <td>
            @Html.DisplayFor(m=>m[i].BenficiaryNo)
            @Html.HiddenFor(m=>m[i].BenficiaryNo)
            
        </td>
    </tr>
     index++;
}

</table>
     
    <button type="submit" class="btn btn-success">
  <i class="icon-user icon-white"></i> Assign hub
</button>
    
    
        }