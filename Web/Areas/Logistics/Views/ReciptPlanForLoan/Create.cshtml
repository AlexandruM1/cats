            </td>
             <td style="width: 50%">
                 <div class="control-label">
                    @Html.LabelFor(m=>m.CommodityID,@Html.Translate2(PAGE_NAME,"Commodity Type"))
                </div>
                <div class="controls">
                    @Html.DropDownList("CommodityTypeID")
                    @Html.ValidationMessageFor(m=>m.CommodityID)
                </div>
                
            </td>
           @* <td style="width: 50%">
                <div class="control-label">
                    @Html.LabelFor(m=>m.HubID,@Html.Translate2(PAGE_NAME,"Hub"))
                </div>
                <div class="controls">
                    @Html.DropDownList("HubID")
                    @Html.ValidationMessageFor(m=>m.HubID)
                </div>
            </td>*@
        </tr>
        <tr style="width: 300px">
            <td style="width: 50%">
                <div class="control-label">
                    @Html.LabelFor(m=>m.LoanSource,@Html.Translate2(PAGE_NAME,"Loan Source"))
                </div>
                <div class="controls">
                    @Html.TextBoxFor(m=>m.LoanSource)
                    @Html.ValidationMessageFor(m=>m.LoanSource)
                </div>
            </td>
            <td>
