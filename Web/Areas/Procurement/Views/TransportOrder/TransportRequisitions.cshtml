@using Cats.Models.ViewModels
@model IEnumerable<Cats.Areas.Procurement.Models.TransportRequisitionSelect>

@{
    ViewBag.Title = "TransportRequisitions";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section LeftBar{
    @Html.Partial("_TransportOrderLeftBar");
}
<h4 class="page-header">Transport Requisitions</h4>
@if(ViewBag.ErrorText!=string.Empty)
{
    <div class="alert-error">@ViewBag.ErrorText</div>
}
@section Toolbar
{
    <a class="btn toolbar-btn " data-buttontype="btn_save" data-submittedform="frm_create_order"></a>
    <a class="btn toolbar-btn " data-buttontype="btn_cancel" href="@Url.Action("Index", "TransportOrder")" title="cancel"></a>
}
@using (Html.BeginForm("TransportRequisitions", "TransportOrder", FormMethod.Post, new { id = "frm_create_order" }))
{

    <div class="k-content">
        
<table class="table table-bordered table-condensed table-striped" id="kGrid">
     <thead>
     <tr>
         <th>
            Select
         </th>
         <th>
             @Html.DisplayNameFor(model => model.TransportRequisitionNo)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.RequestedBy)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.RequestDateET)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.CertifiedBy)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.CertifiedDateET)
         </th>
       

         <th>
             @Html.Label("Status")

         </th>

        @* <th style="visibility: hidden">
             
         </th>*@
     </tr>
          </thead>
            <tbody>
    @{int index = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td >
            @*   @Html.CheckBox("input[" + index + "].IsSelected", item.Input.IsSelected)*@
                 <input type='checkbox'  name="input[@index].IsSelected" id="chkApprovedRequests" value="@item.Input.IsSelected"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportRequisitionNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDateET)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertifiedBy)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.CertifiedDateET)
            </td>
          

        <td>
        @Html.DisplayFor(modelItem => item.StatusName)
             <input type='hidden'  name="input[@index].Number" id="txtRequisitionID" value="@item.Input.Number"/>
        </td>
            @*<td hidden="true">
                  <input type='hidden'  name="input[@index].Number" id="txtRequisitionID" value="@item.Input.Number"/>
            
            </td>*@


          
        </tr>
        index++;
    }
</tbody>
</table>
    
    </div>
   
}
<script>

    $(document).ready(function() {
        $("#kGrid").kendoGrid({
            pageable: true,
            sortable: true
                
            
        });
        
    });
</script>