<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Create New Bid Proposal</h3>
</div>


@using (Html.BeginForm("Create", "PriceQuotation", FormMethod.Post, new { @class = "modal-form" }))
{
    <div class="modal-body">
        <div class="well form-horizontal">
            
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.BidId, "BID")
                </div>
                <div class="controls">
                    @Html.DropDownListFor(m => m.BidId, ViewBag.BIDS as SelectList)
                    @Html.ValidationMessageFor(m => m.BidId)
                </div>
            </div>

            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.RegionID, "Region")
                </div>
                <div class="controls">
                    @Html.DropDownListFor(m => m.RegionID, ViewBag.Regions as SelectList)
                    @Html.ValidationMessageFor(m => m.AdminUnit)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.TransporterId, Html.Translate("Transporter"))
                </div>
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="create" name="create" />*@
                    @Html.DropDownListFor(m => m.TransporterId, ViewBag.Transporters as SelectList)
                    @Html.ValidationMessageFor(m => m.TransporterId)
                </div>

            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.BidBondAmount, Html.Translate("Bid Bond"))
                </div>
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="create" name="create" />*@
                    @Html.TextBoxFor(m => m.BidBondAmount)
                    @Html.ValidationMessageFor(m => m.BidBondAmount)
                </div>

            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.EnteredBy)
                </div>
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="create" name="create" />*@
                    @Html.TextBoxFor(m => m.EnteredBy)
                    @Html.ValidationMessageFor(m => m.EnteredBy)
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}