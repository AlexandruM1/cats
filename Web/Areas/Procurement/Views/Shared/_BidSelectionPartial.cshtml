<style>
    .sidebarForm, .sidebarForm form
    {
        margin:0;
        padding:0;
    }
    .sidebarForm select
    {
        width:150px;
    }
</style> 
@using (Html.BeginForm("EditStart","PriceQuotation",FormMethod.Post))
    {
     <div class="sidebarForm">

        <div class="control-group">
            <label class="control-label">Bid</label>
            <div class="controls">
               
                @Html.DropDownList("BidPlanID",String.Empty)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Region</label>
            <div class="controls">
             
                @Html.DropDownList("RegionID")
                
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Transporter</label>
            <div class="controls">
             
                @Html.DropDownList("TransporterID")
                
            </div>
        </div>
        
        <input type="submit" value="Select" class="btn btn-primary"/>
     </div>

    }