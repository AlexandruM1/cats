@model Cats.Models.Bid

@{
    ViewBag.Title = "Create Bid Document";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section LeftBar
{
     @Html.ActionLink("View Bid Lists", "Index")
}

<div class="well"><h3>Bid Document</h3></div>
    @using (Html.BeginForm())
    {
         @Html.ValidationSummary(true)
       
        <fieldset>
            <legend> New Bid </legend>
            <div class="editor-field">
                @Html.LabelFor(model => model.TransportBidPlanID, "Bid Plan")

                @Html.DropDownList("TransportBidPlanID",String.Empty)
                @Html.ValidationMessageFor(model => model.TransportBidPlanID)
            </div>
            <div class="editor-field" >
                @Html.LabelFor(model => model.BidNumber, "Bid Number")

                @Html.TextBoxFor(model=>model.BidNumber,new { @placeholder = "Enter Bid Number" })
                @Html.ValidationMessageFor(model => model.BidNumber)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.StartDate, "Start Date")

                @*<input class="cats-datepicker" id="startDate" name="startDate" type="text" />*@
                @Html.TextBoxFor(model=>model.StartDate)
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
            <div class="editor-field" >
                @Html.LabelFor(model => model.EndDate, "End Date")

                @*<input class="cats-datepicker" id="endDate" name="endDate" type="text" />*@
                @Html.TextBoxFor(model=>model.EndDate)
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.EndDate, "Opening Date")

                @*<input class="cats-datepicker" id="openDate" name="openDate" type="text" />*@
                @Html.TextBoxFor(model=>model.OpeningDate)
                @Html.ValidationMessageFor(model => model.OpeningDate)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.StatusID, "Status")

                @Html.DropDownList("StatusID",String.Empty)
                @Html.ValidationMessageFor(model => model.StatusID)
            </div>        
            <p>
                <input type="submit" value="Create Bid" class="btn btn-success" />
            </p>
        </fieldset>
      
    }
