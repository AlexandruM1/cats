@model Cats.Models.Bid

@{
    ViewBag.Title = "Edit Bid Document";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section LeftBar
{
     @Html.Partial("_BidLeftBar")
}

<div class="well"><h3>Bid Document</h3></div>

    @using (Html.BeginForm())
    {
         @Html.ValidationSummary(true,"unsuccessful")
        <div class="form-horizontal well">
        <fieldset>
            <legend> Edit Bid </legend>
            @Html.HiddenFor(model=>model.BidID)
            <div class="control-group">
                <div class="control-label">
                     @Html.LabelFor(model => model.TransportBidPlanID, "Bid Plan")
                </div>
                <div class="controls">
                    @Html.DropDownList("TransportBidPlanID",String.Empty)
                    @Html.ValidationMessageFor(model => model.TransportBidPlanID)
                </div>
            </div>
            <div class="control-group" >
                <div class="control-label">
                    @Html.LabelFor(model => model.BidNumber, "Bid Number")
                </div>
                <div class="controls">
                @Html.TextBoxFor(model=>model.BidNumber)
                @Html.ValidationMessageFor(model => model.BidNumber)
                 </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.StartDate, "Start Date")
                </div>
                <div class="controls">
                    <input class="cats-datepicker" type="text" id="start" name="start" value="@Model.StartDate"/>
                    @Html.HiddenFor(model=>model.StartDate)
                    @Html.ValidationMessageFor(model => model.StartDate)

                </div>

            </div>
            <div class="control-group">
                <div class="control-label">
                     @Html.LabelFor(model => model.EndDate, "End Date")
                </div>
               
                <div class="controls">
                     <input class="cats-datepicker" type="text" id="end" name="end" value="@Model.EndDate" />
                    @Html.HiddenFor(model=>model.EndDate)
                    @Html.ValidationMessageFor(model => model.EndDate)
                </div>
                
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.EndDate, "Opening Date")
                </div>
                
                <div class="controls">
                     <input class="cats-datepicker" type="text" id="open" name="open" value="@Model.OpeningDate"/>
                    @Html.HiddenFor(model=>model.OpeningDate)
                    @Html.ValidationMessageFor(model => model.OpeningDate)
                </div>
               
            </div>
            <div class="control-group">
                <div class="control-label">
                      @Html.LabelFor(model => model.StatusID, "Status")
                </div>
              
                <div class="controls"> @Html.DropDownList("StatusID",String.Empty)
                @Html.ValidationMessageFor(model => model.StatusID)</div>
               
            </div>
            
            <div class="control-group">
            <div class="controls">
                <input type="submit" value="Save Changes" class="btn btn-success" />
                <a class="btn btn-success" href="@Url.Action("Index", "Bid", new { Area = "Procurement"})">Cancel</a>
            </div>
            </div>
               
        </fieldset>
            </div>
    }
